<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>

        <% if(username) { %>
          <a style = "position: absolute; right: 85px" class="" >Your logined as: <%=username%></a>

          <form style = "position: absolute; right: 9px" method="POST" action="/clearCookie"><button>Logout</button></form>

        <% } else { %>
            <form style = "position: absolute; right: 9px" class="float-right" action="/login" method="POST">
            
              <div class="form-inline justify-content-right">
                <label for="username">Name:</label>
                <input class="ml-auto" type="text" name="username" placeholder="username" style="width: 200px; margin: .5em">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
        <% } %>
        
      </div>
    </div>
  </nav>
</header>