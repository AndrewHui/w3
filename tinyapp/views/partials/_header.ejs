<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>

        <% if(username) { %>
          <a style = "position: absolute; right: 85px" class="" >Your logined as: <%=username%></a>

          <form style = "position: absolute; right: 9px" method="POST" action="/clearCookie"><button class="btn btn-primary">Logout</button></form>

        <% } else { %>

          <form style = "position: absolute; right: 103px" class="float-right" action="/login" method="GET">
            
            <div class="form-inline justify-content-right">
              <button type="submit" href="/login" class="btn btn-primary">Login</button>
            </div>
          </form>
            
          <form style = "position: absolute; right: 9px" class="float-right" action="/register" method="GET">
            
              <div class="form-inline justify-content-right">
                <button type="submit" href="/results" class="btn btn-primary">Register</button>
              </div>
            </form>
        <% } %>
        
      </div>
    </div>
  </nav>
</header>